<h2>Categories</h2>
<p>
    <%= link_to "Create new category", new_category_path %>
</p>

<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to "Edit", edit_category_path(category) %></td>
        <td><%= link_to "Show", category_path(category) %></td>
    </tr>
    <% end %>
</table>